---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import { Image } from 'astro:assets';
import { getLangFromUrl } from '../i18n-utils.js'

const lang = getLangFromUrl(Astro.url);

type Props = CollectionEntry<'blog'>['data'];

const { slug } = Astro.params;
const { title, description, pubDate, updatedDate, heroImage, ogBlueskyUrl, ogMastodonUrl, ogSteamUrl, ogTwitterUrl } = Astro.props;
---

<html lang={lang}>
	<head>
		<BaseHead title={title} description={description} image={heroImage} />
		<style>
			main {
				width: calc(100% - 2em);
				max-width: 100%;
				margin: 0;
			}
			.hero-image {
				width: 100%;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				box-shadow: var(--box-shadow);
			}
			.prose {
				width: 900px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 1em;
				color: rgb(var(--gray-dark));
			}
			.title {
				margin-bottom: 1em;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
			}
			.date {
				margin-bottom: 0.5em;
				color: rgb(var(--gray));
			}
			.last-updated-on {
				font-style: italic;
			}
			.blog-change-language {
				text-align: center;
				font-size: 1.25em;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<div class="blog-change-language">
				{lang === 'en' && <a href={`/blog/fr/${slug}`}>Lire en Francais</a>}
				{lang === 'fr' && <a href={`/blog/en/${slug}`}>Read in English</a>}
			</div>
			<article>
				<div class="hero-image">
					{heroImage && <Image width={1020} height={510} src={heroImage} alt="" />}
				</div>
				<div class="prose">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
						<hr />
					</div>
					{(ogBlueskyUrl || ogMastodonUrl || ogSteamUrl || ogTwitterUrl) && <div>
						<b>
							{lang === 'en' && <span>This post was originally published on</span>}
							{lang === 'fr' && <span>Ce post a été originellement publié sur</span>}
							{ogMastodonUrl && <a href={ogMastodonUrl}>Mastodon</a>}{ogMastodonUrl && ogTwitterUrl && <span>,</span>} {ogTwitterUrl && <span>Twitter</span>}{(ogMastodonUrl || ogTwitterUrl) && ogBlueskyUrl && <span>,</span>} {ogBlueskyUrl && <a href={ogBlueskyUrl}>Bluesky</a>}{(ogBlueskyUrl || ogMastodonUrl || ogTwitterUrl) && ogSteamUrl && <span>,</span>}{ogSteamUrl && <a href={ogSteamUrl}>Steam</a>}.
						</b>
					</div>}
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
