---
import { getLangFromUrl } from '../i18n-utils.js'

interface Props {
	date: Date;
}

const { date } = Astro.props;
const lang = getLangFromUrl(Astro.url);
// TODO: remove nullable ?
---

<time datetime={date?.toISOString()}>
	{
		date?.toLocaleDateString(lang, {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
